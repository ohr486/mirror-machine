{
  "name": "mirror-machine",
  "version": "1.0.0",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc",
    "start": "npm run build && electron .",
    "dev": "NODE_ENV=development npm run build && electron .",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder --mac",
    "mac-dist": "npm run build && electron-builder --mac",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "keywords": [
    "electron",
    "macos",
    "desktop"
  ],
  "author": "",
  "license": "ISC",
  "description": "Desktop application built with Electron for macOS",
  "devDependencies": {
    "@types/electron": "^1.4.38",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.14.1",
    "@typescript-eslint/eslint-plugin": "^8.30.1",
    "@typescript-eslint/parser": "^8.30.1",
    "electron": "^35.2.0",
    "electron-builder": "^26.0.12",
    "electron-winstaller": "^5.4.0",
    "eslint": "^9.25.0",
    "eslint-plugin-jest": "^28.11.0",
    "eslint-plugin-node": "^11.1.0",
    "jest": "^29.7.0",
    "spectron": "^19.0.0",
    "ts-jest": "^29.3.2",
    "typescript": "^5.8.3"
  },
  "build": {
    "appId": "com.example.mirror-machine",
    "productName": "Mirror Machine",
    "directories": {
      "output": "dist"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "build/icon.icns",
      "category": "public.app-category.utilities"
    }
  },
  "dependencies": {
  }
}
