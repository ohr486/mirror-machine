{
  "name": "mirror-machine",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "NODE_ENV=development electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "win-dist": "electron-builder --windows",
    "mac-dist": "electron-builder --mac",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "keywords": [
    "electron",
    "windows",
    "macos",
    "desktop"
  ],
  "author": "",
  "license": "ISC",
  "description": "Desktop application built with Electron for Windows and macOS",
  "devDependencies": {
    "electron": "^35.2.0",
    "electron-builder": "^26.0.12",
    "electron-winstaller": "^5.4.0",
    "eslint": "^9.25.0",
    "eslint-plugin-jest": "^28.11.0",
    "eslint-plugin-node": "^11.1.0",
    "jest": "^29.7.0",
    "spectron": "^19.0.0"
  },
  "build": {
    "appId": "com.example.mirror-machine",
    "productName": "Mirror Machine",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "build/icon.ico"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "build/icon.icns",
      "category": "public.app-category.utilities"
    }
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.1"
  }
}
